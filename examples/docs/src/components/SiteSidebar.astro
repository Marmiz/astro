---
import { sidebar } from '../config.ts';
---

<nav>
  <ul class="nav-groups">
    {sidebar.map(category => (
      <li>
        <div class="nav-group">
          <h4 class="nav-group-title"><a href={Astro.site.origin + category.link}>{category.text}</a></h4>
          <ul>
            {category.children.map(child => (
              <li class="nav-link"><a href={Astro.site.origin + child.link}>{child.text}</a></li>
            ))}
          </ul>
        </div>
      </li>
    ))}
  </ul>
</nav>
